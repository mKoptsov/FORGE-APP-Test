{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2019",
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["jest", "node"],
    "baseUrl": "./",
    "allowJs": true,
    "jsx": "react-jsx",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "ui/**/*"]
}